<IfModule mod_rewrite.c>
    RewriteEngine On

    ####################
    # (local development server ignores the RewriteBase)
    RewriteBase /path/to/app
    ####################
    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule (.*) index.html [QSA,L]
</IfModule>